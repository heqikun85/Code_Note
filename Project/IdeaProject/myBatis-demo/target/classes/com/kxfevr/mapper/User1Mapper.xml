<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
    namespace
-->
<mapper namespace="com.kxfevr.mapper.User1Mapper">

    <update id="saveUser">

    </update>

    <update id="updateUser">

    </update>

    <delete id="deleteUser">

    </delete>

    <select id="queryUserById" resultType="com.kxfevr.pojo.User1">
        SELECT * FROM user
        WHERE id = #{id}
    </select>

    <select id="queryUserByIds" resultType="com.kxfevr.pojo.User1">
        SELECT * FROM user
        <if test="ids != null">
            WHERE id IN
            <foreach collection="ids" open="(" close=")" item="id" separator=",">
             #{id}
            </foreach>
        </if>
        LIMIT 10
    </select>
</mapper>